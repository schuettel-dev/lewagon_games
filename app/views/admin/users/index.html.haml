= render PageComponent.new do |c|
  - c.heading("Users", "user-group")

  - c.actions do
    = link_to new_admin_user_path, class: "py-2 pl-7 pr-8 bg-green-600 text-white text-xl rounded-xl flex items-center gap-x-1 hover:bg-green-500 transition" do
      .h-6.w-6
        = heroicon :"plus-sm"
      New user

  - c.body do
    .w-full
      = render TableComponent.new do |table|
        - table.header do |header|
          - header.column
          - header.column { "Nickname" }
          - header.column { "Name" }
          - header.column { "Admin" }
          - header.column

        - table.body do |body|
          - @users.each do |user|
            - body.row do |row|
              - row.column do
                .h-8.w-8
                  = render Users::AvatarComponent.new(user)

              - row.column { user.nickname }
              - row.column { user.name }
              - row.column { user.admin.to_s }
              - row.column(class: "text-right") do
                = link_to "Show", admin_user_path(user), class: "link"
