= render PageComponent.new do |c|
  - c.heading(@user.nickname, "user")

  - c.body do
    .flex.flex-col.space-y-16.w-full
      .w-full.grid.grid-cols-3.border.rounded-lg.p-8.bg-white
        .flex
          %dl.flex.flex-col.gap-y-1
            %dt.text-lg.font-bold Nickname
            %dt.text-2xl.flex.space-x-2.items-center.gap-x-2
              = render Users::NameWithAvatarComponent.new(user: @user)

        .flex
          %dl.flex.flex-col.gap-y-1
            %dt.text-lg.font-bold Batches
            %dt.text-2xl.flex.space-x-2.items-center.gap-x-2
              = @user.batches.size

      .flex.flex-col.w-full.space-y-4
        .flex.justify-between.items-center
          %h2.text-lg.uppercase.cool-text-gradient.font-bold.opacity-90.tracking-wide Batches

          .flex
            = render CloseableButtonComponent.new(closeable_after: "users-addToBatchForm") do |c|
              - c.opening_element do
                = link_to new_admin_user_membership_path(@user), class: "py-2 px-6 bg-green-600 text-white hover:bg-green-500 transition rounded-lg text-base flex items-center gap-x-1", "data-turbo-frame": "users__add_to_batch_form_component" do
                  .h-4.w-4
                    = heroicon :"plus"
                  Add to batch

        .w-full
          = turbo_frame_tag :users__add_to_batch_form_component

        .w-full
          = turbo_frame_tag :users__batches_table_component do
            = render Users::BatchesTableComponent.new(user: @user)
