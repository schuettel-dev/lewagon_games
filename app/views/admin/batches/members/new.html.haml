= render PageComponent.new do |c|
  - c.heading("Add member", :user)

  - c.body do
    .w-full
      .min-w-full.overflow-hidden.shadow.ring-1.ring-black.ring-opacity-5.rounded-xl.bg-white.p-8
        = form_with(url: admin_batch_members_path(@batch)) do |f|
          .flex.flex-col.space-y-8
            .flex.flex-col
              = f.label :search, class: "label"
              = f.text_field :search, class: "input"

            .flex.flex-col
              .label Search results
              %ul
                %li mno
                %li pqr
                %li stu
                %li vwx

            .flex.flex-col
              .label Selected users
              %ul
                %li abc
                %li def
                %li ghi
                %li jkl

            .flex.items-center.space-x-8
              = f.button type: :submit, class: "green-button" do
                .h-6.w-6
                  = heroicon :"plus-sm"
                Add members
