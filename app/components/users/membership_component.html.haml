= turbo_frame_tag to_dom_id do
  - if already_user?
    = button_to user_membership_path(user, membership), method: :delete, form: { "data-turbo-confirm": "Are you sure?" }, class: "white-dangerous-button" do
      .h-4.w-4
        = heroicon :"minus-sm"
      Remove

  - else
    = form_with(url: user_memberships_path(user)) do |f|
      = f.hidden_field :batch_id, value: batch.id
      = f.button type: :submit, class: "white-button", "data-turbo-frame": "_top" do
        .h-4.w-4
          = heroicon :plus
        Add
