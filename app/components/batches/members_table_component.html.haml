= render TableComponent.new do |table|
  - table.header do |header|
    - header.column(class: "text-lg") { "User" }
    - header.column(class: "text-lg") { "Role" }
    - header.column

  - table.body do |body|
    = batch.memberships.nicknames_alphabetically.each do |membership|
      - body.row do |row|
        - row.column(class: "text-2xl") do
          = render Users::NameWithAvatarComponent.new(user: membership.user)
        - row.column(class: "text-2xl") { membership.role }
        - row.column(class: "flex justify-end") do
          - unless membership.role_owner?
            = button_to admin_batch_membership_path(@batch, membership), method: :delete, form: { "data-turbo-confirm": "Are you sure?" }, class: "py-2 px-4 border border-gray-200 rounded-lg hover:bg-red-500 hover:text-white transition flex items-center gap-x-1" do
              .h-4.w-4
                = heroicon :"minus-sm"
              Remove
